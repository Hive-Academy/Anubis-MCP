{
  "mcpServers": {
    "anubis": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "-v",
        "D:/projects/anubis/data:/app/data",
        "-v",
        "D:/projects/anubis/workflow-reports:/app/data/anubis-mcp-reports",
        "hiveacademy/anubis"
      ]
    },
    "anubis": {
      "command": "npx",
      "args": [
        "--yes",
        "@hive-academy/anubis@latest"
      ],
      "env": {
        "PROJECT_ROOT": "D:/projects/anubis"
      }
    },
    "anubis": {
      "command": "node",
      "args": [
        "D:/projects/anubis/dist/main.js"
      ]
    }
  }
},
