{{!-- Priority Badge Partial --}}
{{!-- Usage: {{> priority-badge priority="High" size="sm"}} --}}

{{#if priority}}
<span class="priority-badge 
    {{#if (eq size 'xs')}}px-2 py-0.5 text-xs{{else if (eq size 'lg')}}px-3 py-1 text-sm{{else}}px-2 py-1 text-xs{{/if}}
    {{#if (eq priority 'Critical')}}bg-red-100 text-red-800 border border-red-200
    {{else if (eq priority 'High')}}bg-orange-100 text-orange-800 border border-orange-200
    {{else if (eq priority 'Medium')}}bg-yellow-100 text-yellow-800 border border-yellow-200
    {{else if (eq priority 'Low')}}bg-green-100 text-green-800 border border-green-200
    {{else}}bg-gray-100 text-gray-800 border border-gray-200{{/if}}">
    
    {{!-- Priority Icon --}}
    {{#if showIcon}}
    <span class="inline-flex items-center">
        {{#if (eq priority 'Critical')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        {{else if (eq priority 'High')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        {{else if (eq priority 'Medium')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
        </svg>
        {{else if (eq priority 'Low')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        {{/if}}
    </span>
    {{/if}}
    
    {{!-- Priority Text --}}
    {{priority}}
</span>
{{/if}} 