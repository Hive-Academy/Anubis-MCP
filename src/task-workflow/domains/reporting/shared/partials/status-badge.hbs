{{!-- Status Badge Partial --}}
{{!-- Usage: {{> status-badge status="completed" size="sm"}} --}}

{{#if status}}
<span class="status-badge 
    {{#if (eq size 'xs')}}px-2 py-0.5 text-xs{{else if (eq size 'lg')}}px-3 py-1 text-sm{{else}}px-2.5 py-0.5 text-xs{{/if}}
    {{#if (eq status 'completed')}}bg-success-50 text-success-700 border border-success-200
    {{else if (eq status 'in-progress')}}bg-primary-50 text-primary-700 border border-primary-200
    {{else if (eq status 'needs-review')}}bg-warning-50 text-warning-700 border border-warning-200
    {{else if (eq status 'needs-changes')}}bg-danger-50 text-danger-700 border border-danger-200
    {{else if (eq status 'not-started')}}bg-gray-50 text-gray-700 border border-gray-200
    {{else if (eq status 'paused')}}bg-yellow-50 text-yellow-700 border border-yellow-200
    {{else if (eq status 'cancelled')}}bg-red-50 text-red-700 border border-red-200
    {{else}}bg-gray-50 text-gray-700 border border-gray-200{{/if}}">
    
    {{!-- Status Icon --}}
    {{#if showIcon}}
    <span class="inline-flex items-center">
        {{#if (eq status 'completed')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        {{else if (eq status 'in-progress')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
        </svg>
        {{else if (eq status 'needs-review')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        {{else if (eq status 'needs-changes')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        {{else if (eq status 'paused')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        {{else if (eq status 'cancelled')}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        {{else}}
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
        </svg>
        {{/if}}
    </span>
    {{/if}}
    
    {{!-- Status Text --}}
    {{#if (eq status 'not-started')}}Not Started
    {{else if (eq status 'in-progress')}}In Progress
    {{else if (eq status 'needs-review')}}Needs Review
    {{else if (eq status 'needs-changes')}}Needs Changes
    {{else if (eq status 'completed')}}Completed
    {{else if (eq status 'paused')}}Paused
    {{else if (eq status 'cancelled')}}Cancelled
    {{else}}{{status}}{{/if}}
</span>
{{/if}} 