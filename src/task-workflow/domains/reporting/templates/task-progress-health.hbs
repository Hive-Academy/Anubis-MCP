{{> layouts/base title="Task Progress Health" subtitle="Individual task progress and health analysis"}}

{{#*inline "content"}}
<div class="space-y-8">
  <!-- Task Overview -->
  <div class="bg-gradient-to-r from-emerald-50 to-green-50 rounded-xl p-6 border border-emerald-200">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-800 flex items-center">
        <svg class="w-6 h-6 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        {{task.name}}
      </h2>
      <span class="px-3 py-1 rounded-full text-sm font-medium {{task.statusClass}}">
        {{task.status}}
      </span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-emerald-600">{{health.overallScore}}%</div>
        <div class="text-sm text-gray-600">Health Score</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-blue-600">{{progress.completionRate}}%</div>
        <div class="text-sm text-gray-600">Progress</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-purple-600">{{task.priority}}</div>
        <div class="text-sm text-gray-600">Priority</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-orange-600">{{task.currentMode}}</div>
        <div class="text-sm text-gray-600">Current Role</div>
      </div>
    </div>
  </div>

  <!-- Progress Visualization -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
      </svg>
      Progress Timeline
    </h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <canvas id="progressChart" width="400" height="300"></canvas>
      </div>
      <div class="space-y-4">
        <div class="bg-blue-50 rounded-lg p-4">
          <h4 class="font-semibold text-blue-800 mb-2">Progress Metrics</h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span>Subtasks completed:</span>
              <span class="font-medium text-green-600">{{progress.completedSubtasks}}/{{progress.totalSubtasks}}</span>
            </div>
            <div class="flex justify-between">
              <span>Time elapsed:</span>
              <span class="font-medium text-blue-600">{{progress.timeElapsed}}</span>
            </div>
            <div class="flex justify-between">
              <span>Estimated remaining:</span>
              <span class="font-medium text-orange-600">{{progress.estimatedRemaining}}</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="font-semibold text-gray-800 mb-2">Velocity Indicators</h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span>Current velocity:</span>
              <span class="font-medium">{{progress.velocity}} tasks/day</span>
            </div>
            <div class="flex justify-between">
              <span>Trend:</span>
              <span class="font-medium {{progress.trendClass}}">{{progress.trend}}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Health Indicators -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
      Health Assessment
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      {{#each health.indicators}}
      <div class="border rounded-lg p-4">
        <div class="flex items-center justify-between mb-2">
          <h4 class="font-semibold text-gray-800">{{this.name}}</h4>
          <span class="px-2 py-1 text-xs rounded-full {{this.statusClass}}">{{this.status}}</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
          <div class="bg-{{this.color}}-500 h-2 rounded-full" style="width: {{this.score}}%"></div>
        </div>
        <div class="flex justify-between text-xs text-gray-500">
          <span>Score: {{this.score}}%</span>
          <span>{{this.description}}</span>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Subtask Breakdown -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
      </svg>
      Subtask Progress
    </h3>
    <div class="space-y-4">
      {{#each subtasks}}
      <div class="border rounded-lg p-4 {{this.statusBorderClass}}">
        <div class="flex items-center justify-between mb-2">
          <h4 class="font-semibold text-gray-800">{{this.name}}</h4>
          <div class="flex items-center space-x-2">
            <span class="px-2 py-1 text-xs rounded-full {{this.statusClass}}">{{this.status}}</span>
            {{#if this.assignedTo}}
            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded-full">{{this.assignedTo}}</span>
            {{/if}}
          </div>
        </div>
        <p class="text-sm text-gray-600 mb-2">{{this.description}}</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
          <div>
            <span class="text-gray-500">Sequence:</span>
            <span class="font-medium ml-1">{{this.sequenceNumber}}</span>
          </div>
          <div>
            <span class="text-gray-500">Estimated:</span>
            <span class="font-medium ml-1">{{this.estimatedDuration}}</span>
          </div>
          <div>
            <span class="text-gray-500">{{#if this.completedAt}}Completed:{{else}}Started:{{/if}}</span>
            <span class="font-medium ml-1">{{#if this.completedAt}}{{this.completedAt}}{{else}}{{this.startedAt}}{{/if}}</span>
          </div>
        </div>
        {{#if this.batchTitle}}
        <div class="mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            Batch: {{this.batchTitle}}
          </span>
        </div>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Risk Assessment -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      Risk Analysis
    </h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <canvas id="riskChart" width="400" height="300"></canvas>
      </div>
      <div class="space-y-4">
        {{#each risks}}
        <div class="border-l-4 border-{{this.severity}}-400 bg-{{this.severity}}-50 p-3 rounded-r-lg">
          <div class="flex items-center justify-between mb-1">
            <span class="text-sm font-medium text-{{this.severity}}-800">{{this.category}}</span>
            <span class="text-xs px-2 py-1 bg-{{this.severity}}-200 text-{{this.severity}}-800 rounded-full">{{this.severity}}</span>
          </div>
          <p class="text-xs text-{{this.severity}}-700 mb-1">{{this.description}}</p>
          <div class="text-xs text-{{this.severity}}-600">
            <span>Impact: {{this.impact}}</span>
            <span class="ml-2">Probability: {{this.probability}}</span>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <!-- Delegation History -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
      </svg>
      Delegation Timeline
    </h3>
    <div class="space-y-4">
      {{#each delegations}}
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 rounded-full bg-{{this.statusColor}}-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-{{this.statusColor}}-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{this.icon}}"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1 min-w-0">
          <div class="flex items-center justify-between">
            <p class="text-sm font-medium text-gray-900">
              {{this.fromMode}} â {{this.toMode}}
            </p>
            <p class="text-sm text-gray-500">{{this.timestamp}}</p>
          </div>
          <p class="text-sm text-gray-600">{{this.description}}</p>
          {{#if this.duration}}
          <p class="text-xs text-gray-500 mt-1">Duration: {{this.duration}}</p>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Performance Metrics -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      Performance Analysis
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-green-50 rounded-lg p-4">
        <h4 class="font-semibold text-green-800 mb-2">Strengths</h4>
        <ul class="space-y-1 text-sm text-green-700">
          {{#each performance.strengths}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="bg-yellow-50 rounded-lg p-4">
        <h4 class="font-semibold text-yellow-800 mb-2">Areas for Improvement</h4>
        <ul class="space-y-1 text-sm text-yellow-700">
          {{#each performance.improvements}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="bg-blue-50 rounded-lg p-4">
        <h4 class="font-semibold text-blue-800 mb-2">Recommendations</h4>
        <ul class="space-y-1 text-sm text-blue-700">
          {{#each performance.recommendations}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <!-- Action Items -->
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-200">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
      </svg>
      Next Actions
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {{#each actionItems}}
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 rounded-full bg-{{this.priority}}-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-{{this.priority}}-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{this.icon}}"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-gray-900">{{this.title}}</h4>
            <p class="text-sm text-gray-600 mt-1">{{this.description}}</p>
            <div class="mt-2 flex items-center space-x-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{this.priorityClass}}">
                {{this.priority}} Priority
              </span>
              {{#if this.deadline}}
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                Due: {{this.deadline}}
              </span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script>
// Progress Chart
const progressCtx = document.getElementById('progressChart').getContext('2d');
new Chart(progressCtx, {
  type: 'doughnut',
  data: {
    labels: {{{json progress.chartLabels}}},
    datasets: [{
      data: {{{json progress.chartData}}},
      backgroundColor: {{{json progress.chartColors}}},
      borderWidth: 2,
      borderColor: '#ffffff'
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          padding: 20,
          usePointStyle: true
        }
      },
      title: {
        display: true,
        text: 'Task Progress'
      }
    }
  }
});

// Risk Chart
const riskCtx = document.getElementById('riskChart').getContext('2d');
new Chart(riskCtx, {
  type: 'radar',
  data: {
    labels: {{{json risks.chartLabels}}},
    datasets: [{
      label: 'Risk Level',
      data: {{{json risks.chartData}}},
      borderColor: 'rgba(239, 68, 68, 1)',
      backgroundColor: 'rgba(239, 68, 68, 0.2)',
      borderWidth: 2
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      r: {
        beginAtZero: true,
        max: 10,
        ticks: {
          stepSize: 2
        }
      }
    },
    plugins: {
      legend: {
        position: 'bottom'
      }
    }
  }
});
</script>
{{/inline}} 