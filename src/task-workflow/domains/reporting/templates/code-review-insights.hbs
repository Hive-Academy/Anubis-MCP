{{> layouts/base title="Code Review Insights" subtitle="Code review approval rates, common issues, and quality trends"}}

{{#*inline "content"}}
<div class="space-y-8">
  <!-- Executive Summary -->
  <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-6 border border-purple-200">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
      <svg class="w-6 h-6 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Code Review Overview
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-purple-600">{{insights.totalReviews}}</div>
        <div class="text-sm text-gray-600">Total Reviews</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-green-600">{{insights.approvalRate}}%</div>
        <div class="text-sm text-gray-600">Approval Rate</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-orange-600">{{insights.avgReviewTime}}</div>
        <div class="text-sm text-gray-600">Avg Review Time</div>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="text-2xl font-bold text-blue-600">{{insights.qualityScore}}%</div>
        <div class="text-sm text-gray-600">Quality Score</div>
      </div>
    </div>
  </div>

  <!-- Review Status Distribution -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      Review Status Distribution
    </h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <canvas id="reviewStatusChart" width="400" height="300"></canvas>
      </div>
      <div class="space-y-4">
        {{#each insights.statusMetrics}}
        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full mr-3" style="background-color: {{this.color}}"></div>
            <span class="font-medium text-gray-700">{{this.label}}</span>
          </div>
          <div class="text-right">
            <div class="font-bold text-gray-800">{{this.count}}</div>
            <div class="text-sm text-gray-500">{{this.percentage}}%</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <!-- Common Issues Analysis -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      Common Issues & Patterns
    </h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <canvas id="issuesChart" width="400" height="300"></canvas>
      </div>
      <div class="space-y-4">
        {{#each insights.commonIssues}}
        <div class="border rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <h4 class="font-semibold text-gray-800">{{this.category}}</h4>
            <span class="px-2 py-1 text-xs rounded-full {{this.severityClass}}">{{this.frequency}} occurrences</span>
          </div>
          <p class="text-sm text-gray-600 mb-2">{{this.description}}</p>
          <div class="flex justify-between text-sm">
            <span>Impact: <strong>{{this.impact}}</strong></span>
            <span>Trend: <strong class="{{this.trendClass}}">{{this.trend}}</strong></span>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <!-- Quality Trends -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
      </svg>
      Quality Trends Over Time
    </h3>
    <div class="mb-4">
      <canvas id="qualityTrendsChart" width="800" height="400"></canvas>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-green-50 rounded-lg p-4">
        <h4 class="font-semibold text-green-800 mb-2">Improvements</h4>
        <ul class="space-y-1 text-sm text-green-700">
          {{#each insights.improvements}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="bg-yellow-50 rounded-lg p-4">
        <h4 class="font-semibold text-yellow-800 mb-2">Areas of Focus</h4>
        <ul class="space-y-1 text-sm text-yellow-700">
          {{#each insights.focusAreas}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="bg-red-50 rounded-lg p-4">
        <h4 class="font-semibold text-red-800 mb-2">Critical Issues</h4>
        <ul class="space-y-1 text-sm text-red-700">
          {{#each insights.criticalIssues}}
          <li class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            {{this}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <!-- Reviewer Performance -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      Reviewer Performance Analysis
    </h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reviewer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reviews</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Approval Rate</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quality Score</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#each insights.reviewerStats}}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-{{this.color}}-100 flex items-center justify-center">
                  <span class="text-{{this.color}}-600 font-medium text-sm">{{this.initials}}</span>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900">{{this.reviewer}}</div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{this.reviewCount}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{this.avgTime}}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="text-sm text-gray-900">{{this.approvalRate}}%</div>
                <div class="ml-2 w-16 bg-gray-200 rounded-full h-2">
                  <div class="bg-{{this.approvalColor}}-500 h-2 rounded-full" style="width: {{this.approvalRate}}%"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{this.qualityClass}}">
                {{this.qualityScore}}%
              </span>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Review Cycle Analysis -->
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      Review Cycle Efficiency
    </h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <canvas id="reviewCycleChart" width="400" height="300"></canvas>
      </div>
      <div class="space-y-4">
        <div class="bg-blue-50 rounded-lg p-4">
          <h4 class="font-semibold text-blue-800 mb-2">Cycle Metrics</h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span>First-pass approval:</span>
              <span class="font-medium text-green-600">{{insights.firstPassApproval}}%</span>
            </div>
            <div class="flex justify-between">
              <span>Avg review cycles:</span>
              <span class="font-medium text-blue-600">{{insights.avgReviewCycles}}</span>
            </div>
            <div class="flex justify-between">
              <span>Max cycles needed:</span>
              <span class="font-medium text-orange-600">{{insights.maxCycles}}</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="font-semibold text-gray-800 mb-2">Efficiency Indicators</h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span>Quick reviews (&lt;2h):</span>
              <span class="font-medium">{{insights.quickReviews}}%</span>
            </div>
            <div class="flex justify-between">
              <span>Delayed reviews (&gt;24h):</span>
              <span class="font-medium">{{insights.delayedReviews}}%</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recommendations -->
  <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl p-6 border border-green-200">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      Quality Improvement Recommendations
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {{#each insights.recommendations}}
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 rounded-full bg-{{this.priority}}-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-{{this.priority}}-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{this.icon}}"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-gray-900">{{this.title}}</h4>
            <p class="text-sm text-gray-600 mt-1">{{this.description}}</p>
            <div class="mt-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{this.impactClass}}">
                {{this.impact}} Impact
              </span>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script>
// Review Status Chart
const reviewStatusCtx = document.getElementById('reviewStatusChart').getContext('2d');
new Chart(reviewStatusCtx, {
  type: 'doughnut',
  data: {
    labels: {{{json insights.statusLabels}}},
    datasets: [{
      data: {{{json insights.statusData}}},
      backgroundColor: {{{json insights.statusColors}}},
      borderWidth: 2,
      borderColor: '#ffffff'
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          padding: 20,
          usePointStyle: true
        }
      }
    }
  }
});

// Common Issues Chart
const issuesCtx = document.getElementById('issuesChart').getContext('2d');
new Chart(issuesCtx, {
  type: 'bar',
  data: {
    labels: {{{json insights.issueLabels}}},
    datasets: [{
      label: 'Frequency',
      data: {{{json insights.issueData}}},
      backgroundColor: 'rgba(239, 68, 68, 0.8)',
      borderColor: 'rgba(239, 68, 68, 1)',
      borderWidth: 1
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      y: {
        beginAtZero: true,
        ticks: {
          stepSize: 1
        }
      }
    },
    plugins: {
      legend: {
        display: false
      }
    }
  }
});

// Quality Trends Chart
const qualityTrendsCtx = document.getElementById('qualityTrendsChart').getContext('2d');
new Chart(qualityTrendsCtx, {
  type: 'line',
  data: {
    labels: {{{json insights.trendLabels}}},
    datasets: [
      {
        label: 'Approval Rate',
        data: {{{json insights.approvalTrendData}}},
        borderColor: 'rgba(34, 197, 94, 1)',
        backgroundColor: 'rgba(34, 197, 94, 0.1)',
        borderWidth: 2,
        fill: false,
        tension: 0.4
      },
      {
        label: 'Quality Score',
        data: {{{json insights.qualityTrendData}}},
        borderColor: 'rgba(59, 130, 246, 1)',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        borderWidth: 2,
        fill: false,
        tension: 0.4
      },
      {
        label: 'Review Time (hours)',
        data: {{{json insights.timeTrendData}}},
        borderColor: 'rgba(147, 51, 234, 1)',
        backgroundColor: 'rgba(147, 51, 234, 0.1)',
        borderWidth: 2,
        fill: false,
        tension: 0.4,
        yAxisID: 'y1'
      }
    ]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      y: {
        type: 'linear',
        display: true,
        position: 'left',
        title: {
          display: true,
          text: 'Percentage (%)'
        }
      },
      y1: {
        type: 'linear',
        display: true,
        position: 'right',
        title: {
          display: true,
          text: 'Hours'
        },
        grid: {
          drawOnChartArea: false,
        },
      }
    },
    plugins: {
      legend: {
        position: 'top'
      }
    }
  }
});

// Review Cycle Chart
const reviewCycleCtx = document.getElementById('reviewCycleChart').getContext('2d');
new Chart(reviewCycleCtx, {
  type: 'bar',
  data: {
    labels: {{{json insights.cycleLabels}}},
    datasets: [{
      label: 'Number of Reviews',
      data: {{{json insights.cycleData}}},
      backgroundColor: 'rgba(147, 51, 234, 0.8)',
      borderColor: 'rgba(147, 51, 234, 1)',
      borderWidth: 1
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      y: {
        beginAtZero: true,
        ticks: {
          stepSize: 1
        }
      }
    },
    plugins: {
      legend: {
        display: false
      }
    }
  }
});
</script>
{{/inline}} 