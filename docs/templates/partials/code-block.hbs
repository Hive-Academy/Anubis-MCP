<div class="code-block p-4">
  {{#if title}}
  <div class="flex items-center justify-between mb-2">
    <span class="text-xs text-slate-400">{{title}}</span>
    {{#if copyButton}}
    <button class="copy-btn text-slate-400 hover:text-white transition-colors text-xs" onclick="copyToClipboard({{copyContent}})">
      <i class="fas fa-copy"></i>
    </button>
    {{/if}}
  </div>
  {{/if}}
  <code class="font-mono text-sm {{codeColor}}">
    {{{code}}}
  </code>
</div>