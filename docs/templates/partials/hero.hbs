<section class="min-h-screen tech-gradient flex items-center justify-center relative overflow-hidden">
  <!-- Background Animation -->
  <div class="absolute inset-0 opacity-10">
    <div class="floating absolute top-20 left-10 w-64 h-64 rounded-full blur-3xl" style="background-color: var(--honey-amber)"></div>
    <div class="floating absolute bottom-20 right-10 w-64 h-64 rounded-full blur-3xl" style="background-color: var(--electric-blue); animation-delay: -3s"></div>
    <div class="floating absolute top-1/2 left-1/2 w-64 h-64 rounded-full blur-3xl" style="background-color: var(--mint-green); animation-delay: -1.5s"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <div class="hero-content">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full mb-8" style="background-color: rgba(245, 166, 35, 0.2); border: 1px solid rgba(245, 166, 35, 0.3);">
        <i class="fas fa-check-circle mr-2" style="color: var(--mint-green)"></i>
        <span class="text-sm font-medium">{{badge}}</span>
      </div>

      <!-- Main Headline -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        <span class="gradient-text">{{headline1}}</span><br>
        {{headline2}}
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-4xl mx-auto">
        {{{subheadline}}}
      </p>

      <!-- Stats -->
      <div class="flex flex-wrap justify-center gap-8 mb-12 text-sm md:text-base">
        {{#each stats}}
        <div class="flex items-center space-x-2">
          <i class="{{icon}} {{color}}"></i>
          <span>{{{text}}}</span>
        </div>
        {{/each}}
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        {{#each ctaButtons}}
        <{{#if url}}a href="{{url}}"{{else}}button{{/if}} class="{{class}} text-lg px-8 py-4 {{transform}}" {{#if onClick}}onclick="{{onClick}}"{{/if}}>
          <i class="{{icon}} mr-2"></i>{{text}}
        </{{#if url}}a{{else}}button{{/if}}>
        {{/each}}
      </div>

      <!-- Quick Install -->
      {{#if quickInstall}}
      <div class="code-block max-w-2xl mx-auto p-6">
        <div class="flex items-center justify-between mb-3">
          <span class="text-slate-400 text-sm">Quick Install</span>
          <button class="copy-btn text-slate-400 hover:text-white transition-colors" onclick="copyToClipboard('{{quickInstall.command}}')">
            <i class="fas fa-copy"></i>
          </button>
        </div>
        <code class="font-mono text-green-400">{{quickInstall.command}}</code>
      </div>
      {{/if}}
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <i class="fas fa-chevron-down text-slate-400 text-2xl"></i>
  </div>
</section>